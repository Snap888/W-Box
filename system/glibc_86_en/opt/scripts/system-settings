sed -i "165s/.*/chek_info_86="ðŸ”²"/" "$ADRESS"
sed -i "166s/.*/chek_fram_86="ðŸ”²"/" "$ADRESS"
sed -i "167s/.*/chek_gpu_86="ðŸ”²"/" "$ADRESS"
sed -i "174s/.*/HUD_CHEK_1_86="ðŸ”²"; HUD_CHEK_2_86="âœ…"; HUD_CHEK_3_86="ðŸ”²"; HUD_CHEK_4_86="ðŸ”²"; HUD_CHEK_5_86="ðŸ”²"; HUD_CHEK_6_86="ðŸ”²"; HUD_CHEK_7_86="ðŸ”²"; HUD_CHEK_8_86="ðŸ”²"; HUD_CHEK_9_86="ðŸ”²"/" "$ADRESS"
